<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="13dp"
    android:layout_marginTop="15dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

    <TextView
        android:id="@+id/eventNameFieldV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Заголовок мероприятия"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/dateField1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Дата"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/directionField1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Направление"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/organizerField1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Организатор"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/placeField1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Место"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/idField1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/button_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Подать заявку"
        android:onClick="onApplyButtonClick" />

    <Button
        android:id="@+id/button_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Узнать подробнее"
        android:onClick="onDetailsButtonClick" />

  </LinearLayout>
</LinearLayout>

