<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Авторизация Вожатого"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF4081"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Поле для ввода кода сотрудника -->
    <EditText
        android:id="@+id/editTextCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите код Вожатого"
        android:textSize="18sp"
        android:inputType="text"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка для входа -->
    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Войти"
        android:textSize="18sp"
        android:background="#FF4081"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Раздел "Справка и контакты" -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Справка и контакты"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FF4081"
        android:layout_marginBottom="16dp" />

    <!-- Текст с информацией и контактными данными -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="по вопросам обращайтесь на номер 8-800-555-35-35 и почту vjluteer@gmail.com"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка для уведомлений и сообщений -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Уведомления и сообщения"
        android:textSize="18sp"
        android:background="#FF4081"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
