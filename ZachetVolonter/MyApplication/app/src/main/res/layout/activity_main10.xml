<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Список отчетов"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF4081"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Выбор волонтера -->
    <Spinner
        android:id="@+id/spinnerVolunteer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Выбор мероприятия -->
    <Spinner
        android:id="@+id/spinnerEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Кнопка для просмотра отчета -->
    <Button
        android:id="@+id/buttonViewReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Просмотреть отчет"
        android:textSize="18sp"
        android:background="#FF4081"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <!-- Кнопка для генерации и экспорта отчетов -->
    <Button


        android:id="@+id/buttonGenerateReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Генерировать и экспортировать отчеты"
        android:textSize="18sp"
        android:background="#FF4081"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>
