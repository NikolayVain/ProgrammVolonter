<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Список одобренных заявок"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FF4081"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Фильтры и поиск -->
    <!-- Здесь могут быть элементы для фильтрации и поиска по заявкам -->

    <!-- Список заявок -->
    <ListView
        android:id="@+id/listViewApplications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <!-- Кнопка просмотра отдельной заявки -->
    <Button
        android:id="@+id/btnViewApplication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Просмотр заявки"
        android:layout_marginTop="16dp"
        android:background="#FF4081"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Кнопка установки статуса одобрения заявки -->
    <Button
        android:id="@+id/btnApproveApplication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Одобрить заявку"
        android:layout_marginTop="16dp"
        android:background="#FF4081"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Кнопка работы с количеством участников -->
    <Button
        android:id="@+id/btnManageParticipants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Управление участниками"
        android:layout_marginTop="16dp"
        android:background="#FF4081"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
